{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "📱 Start Mobile Preview",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "start-web"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "isBackground": true,
      "problemMatcher": {
        "owner": "expo",
        "pattern": {
          "regexp": "^(.*)$",
          "line": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*Starting.*",
          "endsPattern": ".*Metro waiting on.*"
        }
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    },
    {
      "label": "🌐 Open Mobile Preview",
      "type": "shell",
      "command": "start",
      "args": [
        "http://localhost:19006"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "dependsOn": "📱 Start Mobile Preview"
    }
  ]
}
